nextflow_process {

    name "Test Process SAMTOOLS_QUICKCHECK"
    script "../main.nf"
    process "SAMTOOLS_QUICKCHECK"

    tag "modules"
    tag "modules_local"
    tag "samtools"
    tag "samtools/quickcheck"

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("test-samtools_quickcheck success") {

        when {
            process {
                """
                // TODO nf-core: define inputs of the process here. Example:

                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file('https://github.com/samtools/samtools/raw/refs/heads/develop/test/quickcheck/3.quickcheck.ok.bam', checkIfExists: true),
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert process.out.txt }
            )
        }

    }

    test("quickcheck bam - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file('https://github.com/samtools/samtools/raw/refs/heads/develop/test/quickcheck/3.quickcheck.ok.bam', checkIfExists: true),
                    []
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
